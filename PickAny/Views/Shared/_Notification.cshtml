        <i class="fa fa-bell-o"></i>
        <span class="label label-warning">@ViewBag.countApplied</span>
    </a>
    <ul class="dropdown-menu">
        <li class="header"><a href="/loan/appliedloanreport">You have @ViewBag.countApplied Applied For Money</a> </li>
